<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/str_login" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="49dp"
        android:layout_toRightOf="@+id/tv_password"
        android:hint=""
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:hint=""
        android:ems="10" />

    <TextView
        android:id="@+id/ev_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etusername"
        android:layout_alignBottom="@+id/etusername"
        android:layout_alignParentLeft="true"
        android:text="@string/str_username" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_username"
        android:layout_alignBottom="@+id/et_username"
        android:layout_alignRight="@+id/ev_username"
        android:text="@string/str_password" />

</RelativeLayout>